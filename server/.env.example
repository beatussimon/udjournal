# Matomo Proxy Server Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3001

# Matomo Configuration (SECURE - Server-side only)
# Base URL of Matomo installation
MATOMO_BASE_URL=http://localhost:8085/index.php

# Matomo API Token (GET THIS FROM Matomo Dashboard > API)
# WARNING: This token must NEVER be exposed to the frontend
MATOMO_TOKEN=your_secure_matomo_token_here

# Matomo Site ID
MATOMO_SITE_ID=1

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080
